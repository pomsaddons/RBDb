{
  "manifest_version": 3,
  "name": "RBDb - Roblox Ratings",
  "version": "0.2.1",
  "description": "Rate Roblox experiences with the RBDb community.",
  "icons": {
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [],
  "host_permissions": [
    "https://www.roblox.com/*",
    "https://rbdb.pompompurin.tech/api/*",
    "http://localhost:4000/*",
    "http://127.0.0.1:4000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/games/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
